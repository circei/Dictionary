<Page x:Class="Dictionary.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:" Margin="10"/>
            <TextBox x:Name="txtUsername" Margin="10"/>
            <TextBlock Text="Password:" Margin="10"/>
            <PasswordBox x:Name="txtPassword" Margin="10"/>
            <Button Content="Login" Margin="10" Click="LoginButton_Click"/>
            <TextBlock x:Name="lblMessage" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
